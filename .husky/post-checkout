#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "➡️  post-checkout: ensuring dependencies are installed"
if pnpm -s install; then
	echo "✅  post-checkout: dependencies installed/verified"
else
	echo "❌  post-checkout: failed to install dependencies"
	echo "    Tip: run 'pnpm install' manually and check the output."
fi
